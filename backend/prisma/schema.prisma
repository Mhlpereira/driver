generator client {
  provider = "prisma-client-js"
}

datasource db {
   provider = "postgresql" 
   url = "postgresql://user:123456@localhost:5432/shopperdb"
}

model customer {
  customer_id  Int  @id @default(autoincrement())
  name String 
  rides ride[]
}

model driver{
  driver_id Int @id @default(autoincrement())
  name String
  description String
  car String
  rating String
  tax Float
  minKm Int
  rides ride[]
}

model ride{
  ride_id Int @id @default(autoincrement())
  date DateTime @default(now())
  customer_id Int
  origin String
  destination String
  distance Int
  driver_id Int
  duration Int
  value Float

  customer customer @relation(fields: [customer_id], references: [customer_id])
  driver driver     @relation(fields: [driver_id], references: [driver_id])
}

