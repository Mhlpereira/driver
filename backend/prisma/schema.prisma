generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url =  postgresql://@shopper_container:5432/shopperdb
}

model Customer {
  customer_id  String  @id @default(uuid())
  name String 
  rides Ride[]?
}

model Driver{
  driver_id String @id @default(autoincrement())
  name String
  description String
  car String
  rating String //podendo mudar
  tax Number
  minKm Number
  rides Ride[]?
}

model Ride{
  ride_id String @id @default(autoincrement())
  date DateTime @default(now())
  userId Number
  origin Location
  destination Location
  driverId Number
  duration Number
  value float

  customer Customer @relation(fields: [customerId], references: [id])
  driver Driver     @relation(fields: [driveId], references: [id])
}

